        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="ndashimira cane: Yuda, Vivi Maestro, Manzi J. Edmond, Primikiz, Paul Girukwishaka, HOGI.BI, UDEV Team"
